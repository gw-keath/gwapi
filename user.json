            {
              "name": "卡車不存在",
              "status": 404,
              "description": "卡車不存在",
              "body": "{\"message\": \"Truck not found\"}"
            },
            {
              "name": "請求驗證失敗",
              "status": 422,
              "description": "請求驗證失敗",
              "body": "{\"message\":\"The given data was invalid.\",\"errors\":{\"status\":[\"The selected status is invalid.\"]}}"
            }
          ]
        },
        {
          "name": "Delete a truck by ID",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/trucks/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "trucks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": [
            {
              "name": "成功刪除卡車",
              "status": 200,
              "description": "成功刪除卡車",
              "body": "{\"message\": \"Truck deleted successfully\"}"
            },
            {
              "name": "卡車不存在",
              "status": 404,
              "description": "卡車不存在",
              "body": "{\"message\": \"Truck not found\"}"
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
