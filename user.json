            },
            "url": {
              "raw": "{{base_url}}/api/trucks/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "trucks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": [
            {
              "name": "成功更新卡車",
              "status": 200,
              "description": "成功更新卡車",
              "body": "{\"id\":1,\"status\":\"under_maintenance\"}"
