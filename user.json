            },
            {
              "name": "請求驗證失敗",
              "status": 422,
              "description": "請求驗證失敗",
              "body": "{\"message\":\"The given data was invalid.\",\"errors\":{\"type\":[\"The type field is required.\"],...}}"
            }
          ]
